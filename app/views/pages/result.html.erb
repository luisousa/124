
<div class="container">
	<div class="row">
	  <div class="col-md-6">
			<h1>OLX</h1>
			
		<% if @list_result %>
			  <ul>
			  	<% i=0 %>
			    <% @list_result.each do |res| %>

			    	<% if(i == 0)  %>
			    		<h3><%= res.link %></h3>
			    	<% end %>			
			    	

			      <li>

			      		<!-- <img onmouseover="bigImg(this)"  border="0" src="<%= res.image %>" alt="Smiley" width="32" height="32"> -->
						<a href="<%= res.descricao %>" target="_blank"
  						onmouseover="document.getElementById('place-holder-<%= i %>').src='<%= res.image %>';"
  						onmouseout="document.getElementById('place-holder-<%= i %>').src='https://db.tt/y12wpr6O';">
  						<%= res.titulo %>
  						<img src="https://db.tt/y12wpr6O" id="place-holder-<%= i %>" style="zindex: 100; position: absolute;"/>
						</a>

						<%= res.preco %> -
						<%= res.data %>
					<%	i += 1 %>
			      </li>
			    <% end %>
			  </ul>
